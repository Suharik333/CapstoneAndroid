<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="innopolis.aleksandr.projectorcontrol.MainActivity">

    <TextView
        android:id="@+id/TextProjectorControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cond_state"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ToggleButton
        android:id="@+id/tooglebutton_projector_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/TextProjectorControl"
        android:layout_marginTop="36dp"
        android:checked="false"
        android:textAlignment="center"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TextProjectorControl"
        android:layout_alignStart="@+id/TextProjectorControl"
        android:layout_below="@+id/tooglebutton_projector_state"
        android:layout_marginTop="48sp"
        android:text="@string/updated_from"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/device_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updated_text"
        android:layout_centerHorizontal="true"
        android:text="@string/device"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_text"
        android:layout_centerHorizontal="true"
        android:text="@string/default_date"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/room_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="State of room"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ToggleButton
        android:id="@+id/toogleButton_room_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/room_text"
        android:enabled="false"
        android:textOff="Locked"
        android:textOn="Unlocked"
        android:textSize="25dp" />
</RelativeLayout>
